<Page x:Class="Veget.PageApp.PageStockWorker.PageAddCauntSal"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Veget.PageApp.PageStockWorker"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageAddCauntSal">

    <Grid>
        <StackPanel>
            <TextBlock Text="какие семена добавить?"/>
            <ComboBox x:Name="CMBSal">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Title}"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <TextBlock Text="кол-во"/>
            <TextBox x:Name="TxtCaunt"/>
            <Button Content="добавить" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Page>
