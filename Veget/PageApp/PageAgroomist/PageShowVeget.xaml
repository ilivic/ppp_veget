<Page x:Class="Veget.PageApp.PageAgroomist.PageShowVeget"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Veget.PageApp.PageAgroomist"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageShowVeget">

    <Grid>
        <ListView x:Name="ListVeget">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="Название"/>
                        <TextBlock Text="{Binding Title}"/>
                        <Image Width="150" Height="150" Source="{Binding Image}"/>
                        <TextBlock Text="Категория продукта"/>
                        <TextBlock Text="{Binding Cat.Title}"/>
                        <TextBlock Text="Цена за У.Е."/>
                        <TextBlock Text="{Binding Price}"/>
                        <TextBlock Text="кол-во"/>
                        <TextBlock Text="{Binding caunt}"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
