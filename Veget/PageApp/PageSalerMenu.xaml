<Page x:Class="Veget.PageApp.PageSalerMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Veget.PageApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageSalerMenu">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel>
            <Button Content="Посмотреть продукты" Click="Button_Click_1"/>
            <Button Content="связаться с нами" Click="Button_Click_2"/>
            <Button Content="выйти" Click="Button_Click"/>
        </StackPanel>
        <Frame Grid.Column="1" Grid.RowSpan="3" Grid.ColumnSpan="2" Margin="10" NavigationUIVisibility="Hidden" x:Name="FrameSaler"/>
    </Grid>
</Page>
